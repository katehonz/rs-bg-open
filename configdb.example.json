{
  "database": {
    "host": "localhost",
    "port": 5432,
    "database": "rs_ac_bg",
    "username": "postgres",
    "password": "your_password_here",
    "max_connections": 10,
    "min_connections": 5,
    "connect_timeout": 10,
    "acquire_timeout": 10,
    "idle_timeout": 600
  },
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "workers": 4,
    "enable_cors": true,
    "cors_origins": ["http://localhost:3000", "http://localhost:5173"]
  },
  "logging": {
    "level": "info",
    "file": "logs/backend.log",
    "stdout": true
  },
  "initial_setup": {
    "create_demo_company": true,
    "demo_company_name": "Демо Фирма ООД",
    "demo_company_eik": "123456789",
    "demo_company_vat": "BG123456789",
    "load_chart_of_accounts": true
  },
  "object_storage": {
    "enabled": false,
    "endpoint": "https://your-object-storage-endpoint",
    "access_key": "YOUR_ACCESS_KEY",
    "secret_key": "YOUR_SECRET_KEY",
    "region": "eu-central",
    "bucket": "your-bucket-name",
    "prefix": "rs-ac-bg/backups",
    "force_path_style": true
  }
}
